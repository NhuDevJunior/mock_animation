<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ExpenditureFragment">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Set up a monthly budget goal"
        android:textStyle="bold"
        android:id="@+id/tvTitle"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:id="@+id/tvLabel"
        android:text="Total budget is"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="15dp"
        android:id="@+id/tvExpenditure"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:text="$ 1,500"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tvLabel"
        android:layout_marginStart="10dp" />
    <com.example.animation_mock_nhuhc.ui.SnappingRecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvListExpenditure"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabel"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        />
    <LinearLayout
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/rvListExpenditure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/icon_usd"
            android:textColor="#999999"
            android:textSize="40sp"
            android:text="$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_cost"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_seekbar"
    android:layout_width="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@drawable/bg_purple"
    android:layout_height="200dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seekbar"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/seekbar_dir"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="@id/seekbar_dir"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/seekbar_dir"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:background="@drawable/background_direc"
        android:backgroundTint="@color/teal_200"
        android:layout_marginTop="20dp"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintLeft_toRightOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="15dp"
        android:layout_height="0dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintLeft_toLeftOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent"
        android:text="That's a lot"
        android:id="@+id/tvLevel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        />
    <TextView
        android:id="@+id/tvNotion"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:singleLine="false"
        android:text="Sometimes, you can eat in cafe Up to 3% of economy"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintLeft_toLeftOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/tvLevel"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />
<androidx.cardview.widget.CardView
    android:layout_width="60dp"
    android:layout_height="60dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="15dp"
    android:layout_marginEnd="15dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Save"
    android:textStyle="bold"
    android:textSize="16sp"
    android:textColor="@color/black"
    />
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>